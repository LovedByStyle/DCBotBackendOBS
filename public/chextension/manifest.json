{
  "manifest_version": 3,
  "name": "Cancel Notifier",
  "version": "1.0.0",
  "description": "Automated DVSA driving test slot monitoring and booking",
  "key": "",
  "permissions": [
    "storage",
    "notifications",
    "offscreen",
    "tabs"
  ],
  "host_permissions": [
    "https://driver-services.dvsa.gov.uk/*",
    "https://api.telegram.org/*",
    "https://discord.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://driver-services.dvsa.gov.uk/*"],
      "js": ["scripts/xhr-hook.js"],
      "run_at": "document_start",
      "all_frames": false,
      "world": "MAIN"
    },
    {
      "matches": ["https://driver-services.dvsa.gov.uk/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["https://www.access.service.gov.uk/login/signin/creds*"],
      "js": ["scripts/login-handler.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://www.access.service.gov.uk/login/already-signed-in/*"],
      "js": ["scripts/already-signed-in-handler.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://driver-services.dvsa.gov.uk/obs-web/pages/home*"],
      "js": ["scripts/home-form-filler.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["https://driver-services.dvsa.gov.uk/obs-web/pages/home*"],
      "js": ["scripts/reservation-success-detector.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["http://localhost/*", "http://127.0.0.1/*", "http://0.0.0.0/*"],
      "js": ["scripts/simple-captcha-detector.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
